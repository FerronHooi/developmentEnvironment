# Development Container Environment Variables
# Copy this file to .env and fill in your values
# The .env file will be ignored by git for security

# ============================================
# PROJECT CONFIGURATION
# ============================================

# Project name (used for container naming and Jupyter kernels)
PROJECT_NAME=my-project

# Environment (development, staging, production)
ENVIRONMENT=development

# Python version (3.9, 3.10, 3.11, 3.12)
PYTHON_VERSION=3.11

# Node.js version (16, 18, 20)
NODE_VERSION=18

# ============================================
# AZURE CONFIGURATION
# ============================================

# Azure Service Principal (for automated authentication)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=

# Alternative: Use Azure CLI login instead of service principal
# Leave above empty and run 'az login' in the container

# ============================================
# DATABRICKS CONFIGURATION
# ============================================

# Databricks workspace
DATABRICKS_HOST=https://adb-660618908104856.16.azuredatabricks.net
DATABRICKS_TOKEN=

# Databricks cluster ID (for databricks-connect)
DATABRICKS_CLUSTER_ID=

# ============================================
# GIT CONFIGURATION
# ============================================

# Git user configuration (optional - can also use mounted .gitconfig)
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com

# ============================================
# API ENDPOINTS & DATABASES
# ============================================

# API endpoints
API_BASE_URL=https://api.example.com
API_KEY=
API_SECRET=

# Database connections
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
REDIS_URL=redis://localhost:6379

# MongoDB
MONGO_URI=mongodb://localhost:27017/mydb

# ============================================
# FEATURE FLAGS
# ============================================

# Enable GPU support (requires nvidia-docker)
ENABLE_GPU=false

# Enable Jupyter notebook
ENABLE_JUPYTER=true

# Enable Databricks features
ENABLE_DATABRICKS=true

# ============================================
# DEVELOPMENT TOOLS
# ============================================

# Python development
PYTHON_LINTING=true
PYTHON_FORMATTING=black
PYTHON_TESTING=pytest

# Node.js package manager (npm, yarn, pnpm)
NODE_PACKAGE_MANAGER=npm

# ============================================
# PATHS & VOLUMES
# ============================================

# Local data directory to mount (optional)
LOCAL_DATA_PATH=./data

# Shared tools directory (optional)
SHARED_TOOLS_PATH=

# Custom scripts directory (optional)
CUSTOM_SCRIPTS_PATH=

# ============================================
# PROXY CONFIGURATION (if behind corporate proxy)
# ============================================

# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1,.company.com

# ============================================
# LOGGING & DEBUGGING
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable verbose output
VERBOSE=false

# Debug mode
DEBUG=false

# ============================================
# CONTAINER RESOURCES (optional)
# ============================================

# Memory limit (e.g., 4g)
CONTAINER_MEMORY=

# CPU limit (e.g., 2)
CONTAINER_CPUS=

# ============================================
# CUSTOM VARIABLES
# ============================================

# Add your project-specific variables below